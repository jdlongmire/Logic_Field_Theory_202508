name: Lean CI
on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # Install elan/Lean only. Do NOT auto-configure the Lake package.
      - name: Install elan + Lean
        uses: leanprover/lean-action@v1
        with:
          auto-config: false
          build: false
          test: false
          lint: false
          use-github-cache: true
          use-mathlib-cache: true

      # Sanity check: the package files exist
      - name: Show package files
        run: |
          ls -la
          ls -la LFT_003_Lean_Proofs
          ls -la LFT_003_Lean_Proofs/Core

      # Generate manifest, then build, inside the subfolder
      - name: lake update
        working-directory: LFT_003_Lean_Proofs
        run: lake update

      - name: lake build
        working-directory: LFT_003_Lean_Proofs
        run: lake build
